  "devDependencies": {
    "@types/node": "17.0.18",
    "@types/react": "17.0.39",
    "@types/styled-components": "^5.1.22",
    "babel-plugin-styled-components": "^2.0.2",
    "eslint": "^8.9.0",
    "eslint-config-next": "12.0.10",
    "prettier": "^2.5.1",
    "typescript": "4.5.5"
  }
