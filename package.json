{
  "private": true,
  "scripts": {
    "dev": "next dev",
    "debug": "NODE_OPTIONS='--inspect' next dev -p ${PORT:-3030}",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:dev": "jest --watch src/**/*",
    "lint": "yarn eslint:check && yarn prettier:check",
